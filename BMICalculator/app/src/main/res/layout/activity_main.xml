<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="BMI 计算器"
        android:textSize="40dp"
        android:textColor="#000"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
       />
    <EditText
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入体重，单位公斤"
        android:inputType="numberDecimal"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="@id/title"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <EditText
        android:id="@+id/height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入身高，单位米"
        android:inputType="numberDecimal"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="@id/weight"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="性别："
        android:gravity="center"
        android:textColor="#000"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@id/height"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/height"
        android:layout_marginTop="60dp"
        >
        <RadioButton
            android:id="@+id/boy"
            android:text="男"
            android:textColor="#000"
            android:textSize="18dp"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:id="@+id/gril"
            android:text="女"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RadioGroup>
<Button
    android:id="@+id/compute"
    android:text="计算"
    android:textColor="#000"
    android:textSize="18dp"
    android:background="#857"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="@+id/radiogroup"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="60dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:onClick="compute"
    tools:ignore="OnClick" />
    <TextView
        android:id="@+id/textbmi"
        android:text="BMI:"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/compute"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/bmiValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/compute"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toLeftOf="@id/textbmi"
        android:layout_marginLeft="60dp"
        />
    <TextView
        android:id="@+id/textzhenduan"
        android:text="诊断:"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/textbmi"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/zdValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/bmiValue"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="@id/textbmi"
        android:layout_marginLeft="60dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>